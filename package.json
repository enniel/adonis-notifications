{
  "name": "adonis-notifications",
  "version": "0.0.1",
  "description": "The Adonis Notifications package.",
  "main": "src/ChannelManager.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "coverage": "npm run lint && FORCE_COLOR=true node ./bin/coverage",
    "test": "npm run lint && FORCE_COLOR=true node ./bin/test",
    "test:all": "npm run test:pg && npm run test:mysql && npm run test:sqlite3",
    "test:pg": "DB=pg npm run test",
    "test:mysql": "DB=mysql npm run test",
    "test:sqlite3": "DB=sqlite3 npm run test",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "precommit": "npm run test:all && lint-staged",
    "prepush": "npm run test:all && lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "author": "Evgeny Razumov (enniel)",
  "license": "MIT",
  "dependencies": {
    "co-eachseries": "^1.0.3",
    "lodash": "^4.17.4",
    "node-exceptions": "^2.0.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "adonis-ace": "^3.0.7",
    "adonis-fold": "^3.0.3",
    "adonis-framework": "^3.0.13",
    "adonis-lucid": "^3.0.15",
    "adonis-lucid-polymorphic": "^0.0.1",
    "chai": "^3.5.0",
    "co-fs-extra": "^1.2.1",
    "co-mocha": "^1.2.0",
    "dirty-chai": "^2.0.0",
    "dotenv": "^4.0.0",
    "husky": "^0.13.4",
    "istanbul": "^0.4.5",
    "lint-staged": "^4.0.0",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mysql": "^2.13.0",
    "pg": "^6.3.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.8",
    "sqlite3": "^3.1.8",
    "standard": "^10.0.2"
  },
  "standard": {
    "global": [
      "describe",
      "it",
      "after",
      "before",
      "context"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enniel/adonis-notifications.git"
  },
  "keywords": [
    "notifications",
    "adonis"
  ],
  "bugs": {
    "url": "https://github.com/enniel/adonis-notifications/issues"
  },
  "homepage": "https://github.com/enniel/adonis-notifications#readme"
}
